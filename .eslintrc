{
    "rules": {
        "indent":                   [2, 2],
        "quotes":                   [2, "double"],
        "linebreak-style":          [2, "unix"],
        "semi":                     [2, "always"],
        "eqeqeq":                   [2, "smart"],
        "no-path-concat":           2,
        "max-nested-callbacks":     [2, 3]
    },
    "env": {
        "browser": true,
        "es6": false
    },
    "globals": {
            "d3": true
    },
    "extends": "eslint:recommended"
}